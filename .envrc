# Optional direnv aliases for a uv-based workflow.
# Install direnv: brew install direnv
# Then run: direnv allow

TEST_ENCRYPTION_KEY=${VIVIAN_API_ENCRYPTION_KEY:-fEoEtwTZrNYkNLpLM2XXnV1l3e4dnKYGZHso5N86c10=}

alias test-api="VIVIAN_API_ENCRYPTION_KEY=$TEST_ENCRYPTION_KEY uv run --project apps/api --extra test pytest apps/api/tests"
alias test-mcp="uv run --project apps/test-mcp-server --extra test pytest apps/test-mcp-server/tests"
alias test-all="test-api && test-mcp"
alias seed-id="docker compose exec -T api python scripts/seed_identity.py"
